				                	<input type="number" id="quantity" name="quantity" min="1" max="5">
				                	<input type="submit" id="submit_produit" name="submit_produit" value="Ajouter au panier">
			                	</div>
			                </form>
			            <%}	
					}
		       	%>
				</div>
			</div>
